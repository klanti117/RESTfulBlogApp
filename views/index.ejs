<% include partials/header %>
<% include partials/navbar %>
  <div class="ui main text container">
    <div class="u ihuge header"><h1>RESTful Blog APP</h1></div>
    <div class="ui tio attached segment">
      <div class="ui divided items">
        <% blogs.forEach(function(blog){ %>
          <div class="item">
            <div class="image">
              <img src="<%= blog.image %>">
            </div>
            <div class="content">
              <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
            </div>
            <div class="meta">
              <span> <%= blog.created.toDateString() %></span>
            </div>
            <div class="description">
              <% if (typeof blog.body == 'undefined' ) { %>
                    <p> no content</p>
                <% } else { %>
                    <p> <%= blog.body.substring(0, 100) %>...</p>
                <% } %>
            </div>
            <div class="extra">
              <a class="ui floated basic green button" href="/blogs/<%= blog._id %>">Read More</a>
            </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
<% include partials/footer %>

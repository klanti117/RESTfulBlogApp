<% include partials/header %>
<% include partials/navbar %>
<div class= "ui main text container segment">
  <div class="ui huge header">Edit <%= blog.title %></div>
  <form class="ui form" action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
    <div class="field">
      <label class="ui teal tag  label">Title</label>
      <input type="text" name="blog[title]" value="<%= blog.title %>">
    </div>
    <div class="field">
      <label class="ui teal tag  label">Images</label>
      <input type="text" name="blog[image]" value="<%= blog.image %>">
    </div>
    <div class="field">
      <label class="ui teal tag  label">Blog Content</label>
      <textarea name="blog[body]"><%= blog.body %></textarea>
    </div>
      <input type="submit" class="ui inverted red button big">
  </form>
</div>
<% include partials/footer %>
